                                                    <input class="form-control nostyle" id="fathername" name="fathername" type="text" title="Father Name." value="@ViewBag.Employee.PERSON.FATHERS_NAME" />
                                                </div>
                                            </div><!-- /.col-lg-6 -->
                                            <div class="col-lg-6">
